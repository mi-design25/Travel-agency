<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>Listes des Hotels et Voyages</h1>
                    <p class="mb-0">Découvrez notre sélection des meilleurs hôtels et voyages...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<section id="real-estate" class="real-estate section">
    <div class="container">
        <div class="row gy-4">
            {% for hotel in hotels %}
            <div class="col-xl-4 col-md-6" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                <div class="card">
                    <img src="{{ asset(hotel.image) }}" alt="" class="img-fluid">
                    <div class="card-body">
                        <span class="sale-rent">{{ hotel.price }} $</span>
                        <h3><a class="stretched-link">{{ hotel.name }}</a></h3>
                        <div class="card-content d-flex flex-column justify-content-center text-center">
                            <div class="row propery-info">
                                <div class="col">Surface</div>
                                <div class="col">Chambres</div>
                                <div class="col">Salles de bain</div>
                                <div class="col">Garages</div>
                            </div>
                            <div class="row">
                                <div class="col">{{ hotel.area }}</div>
                                <div class="col">{{ hotel.beds }}</div>
                                <div class="col">{{ hotel.baths }}</div>
                                <div class="col">{{ hotel.garages }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>